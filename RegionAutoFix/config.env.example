# RegionAutoFix config - copy to config.env and edit. Do not commit config.env.
# Shell-compatible key="value". No spaces around =.

# Path to world save (Region dir is worldsave/Region)
worldsave="/path/to/7DaysToDie/Saves/WorldName/WorldName"

# Base directory for snapshot backups (e.g. RegionAutoFix/Saves)
backup="/path/to/RegionAutoFix/Saves"

# OS user running the 7DTD server (used for pgrep/kill)
username="linuxuser"

# Minutes between Region-only backups
savetime="60"

# Number of snapshots to retain (oldest deleted after each backup)
savecount="24"

# Full path to 7DTD dedicated server console log (tail -F)
logfile="/path/to/sdtdserver-console.log"

# Discord webhook URL; leave empty to disable Discord notifications
webhook=""

# Telnet port for shutdown and heartbeat (e.g. 8081)
telnet="8081"

# Optional: command to start the server (e.g. script or systemd is used otherwise)
startcmd=""

# Optional: command to stop the server (used if telnet shutdown fails)
stopcmd=""

# Telnet command sent when log idle > 120s (default: version)
heartbeat_cmd="version"

# Optional: telnet admin password (send before commands if set)
telnet_password=""

# nc timeout in seconds (2-5)
telnet_timeout="5"

# If true: no stop/start/kill, no overwrite of region files; still logs and optional Discord
dry_run="false"

# Seconds between startup Discord announcements (avoid spam on rapid restarts); default 300
startup_announce_cooldown="300"
